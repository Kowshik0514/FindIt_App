{
  "extends": "./node_modules/expo/tsconfig.base.json",
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.jsx",

    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "app/(auth)/_layout.jsx",
    "app/_layout.jsx"
  ]
}
